<div class="container p-4">
    <h1>Hola, aquí actualizas los usuarios desde Control</h1>
    <div class="row">
        <div class="col-md-4 mx-auto m-4">
            <div class="card">
                <div class="card-body">
                    <form action="/control/users/editar/{{user.id}}" method="POST">
                        <div class="form-group m-4">
                            <input type="text" name="fullname" value="{{user.fullname}}" class="form-control" autofocus>
                        </div>
                        <div class="form-group m-4">
                            <input type="text" name="username" value="{{user.username}}" class="form-control" placeholder="Nombre de usuario">
                        </div>
                        <div class="form-group m-4">
                            <input type="text" name="password" value="{{user.password}}" class="form-control" placeholder="Contraseña">
                        </div>
                        <div class="form-group m-4">
                            <input type="int" name="phone" value="{{user.phone}}" class="form-control" placeholder="Teléfono">
                        </div>
                        <div class="form-group m-4">
                            <input type="email" name="email" value="{{user.email}}" class="form-control" placeholder="Correo electrónico">
                        </div>
                        <div class="form-group m-4">
                            <button class="btn btn-success">
                                Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>