<div class="container p-4">
    <h1>Hola, aquí añades los usuarios desde Control</h1>
    <div class="row">
        <div class="col-md-4 mx-auto m-4">
            <div class="card">
                <div class="card-body">
                    <form action="/control/agregar" method="POST">
                        <div class="form-group m-4">
                            <input type="text" name="fullname" class="form-control" placeholder="Nombre de Usuario" autofocus>
                        </div>
                        <div class="form-group m-4">
                            <input type="text" name="username" class="form-control" placeholder="Nombre de usuario">
                        </div>
                        <div class="form-group m-4">
                            <input type="password" name="password" class="form-control" placeholder="Contraseña">
                        </div>
                        <div class="form-group m-4">
                            <input type="int" name="phone" class="form-control" placeholder="Teléfono">
                        </div>
                        <div class="form-group m-4">
                            <input type="email" name="email" class="form-control" placeholder="Correo electrónico">
                        </div>
                        <div class="form-group m-4">
                            <button class="btn btn-success">
                                Agregar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>