<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro de Súper usuarios</h3>
                </div>
                <div class="card-body">
                    <form action="/control/registro" method="POST">

                        <div class="form-group m-4">
                            <input type="text" name="cname" id="" class="form-control" placeholder="Nombre completo">
                        </div>

                        <div class="form-group m-4">
                            <input type="password" name="cpass" id="" class="form-control" placeholder="Password">
                        </div>

                        <div class="form-group m-4">
                            <input type="text" name="cuser" id="" class="form-control" placeholder="Nombre de usuario">
                        </div>

                        <div class="form-group m-4">
                            <input type="tel" name="cphone" id="" class="form-control" placeholder="Teléfono">
                        </div>

                        <div class="form-group m-4">
                            <input type="tel" name="cemail" id="" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group m-4">
                            <button class="btn btn-success">
                                Agregar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>